<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <View
            style="@style/InputBorder"
            android:id="@+id/breaLine"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
    />
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Antena 1"
              android:textSize="30sp"
              android:layout_marginStart="10dp"
              android:id="@+id/organizacao"
    />
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Ep. 580 Ricardo Campos – “Conta-me histórias”, o arquivo de notícias que permite viajar pelo tempo"
              android:textSize="18sp"
              android:layout_marginStart="10dp"
              android:layout_marginEnd="10dp"
              android:id="@+id/titulo"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Mais que um arquivo de sites e notícias em português, esta plataforma permite ao utilizador pesquisar por um certo tema e acompanhar a sua evolução ao longo do tempo."
              android:layout_marginStart="10dp"
              android:layout_marginEnd="10dp"
              android:layout_marginTop="5dp"
              android:id="@+id/texto"
    />
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="http://www.90segundosdeciencia.pt/episodes/ep-580-ricardo-campos/"
              android:layout_marginStart="10dp"
              android:layout_marginEnd="10dp"
              android:layout_marginTop="5dp"
              android:autoLink="web"
              android:textColorLink="@color/backgroundMain"
              android:id="@+id/link"
    />


</LinearLayout>