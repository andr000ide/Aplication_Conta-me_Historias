<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
              android:orientation="vertical"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.githang.stepview.StepView
            android:paddingTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/step_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:svTextSize="0sp"
            app:svLineWidth="4dp"
            app:svFillRadius="10dp"
            app:svCircleColor="@color/colorPrimaryDark"
            app:svTextColor="@color/colorPrimary"
            app:svSelectedColor="@color/colorPrimary"
            app:svStrokeWidth="3dp"
            android:background="@android:color/transparent"/>

    <androidx.viewpager.widget.ViewPager android:layout_width="match_parent"
                                         app:layout_constraintTop_toBottomOf="@id/step_view"
                                         app:layout_constraintBottom_toBottomOf="parent"
                                         android:id="@+id/viewpagernarr"
                                         android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>



</LinearLayout>